@using Newtonsoft.Json
@{
    ViewData["Title"] = "Cadastro de Pessoa";
}
<link rel="stylesheet" href="~/css/pages.css" />
<link rel="stylesheet" href="~/css/components.css" />
<link rel="stylesheet" href="~/css/tab-strip.css" />


@using (Html.BeginForm("Inserir", "CadastroPessoa", FormMethod.Post))
{

    <div class="form">
        <div class="form-head">
        </div>
        <div class="form-body">
        </div>
        <div class="title">Inserir uma Pessoa</div>
        <div class="subtitle">* Campos com preenchimento obrigatório</div>

        <div id="tabstrip">
            <ul>
                <li class="k-state-active">
                    Dados da Pessoa
                </li>
            </ul>
            <div>
                <div class="input-container ic1">
                    <label class="component-name">Nome Completo</label>
                    <input id="nome" name="Responsavel.Nome" class="input" type="text" MaxLength="100"/>
                </div>
                <div class="input-container ic2">
                    <label class="component-name">RG</label>
                    <input id="rg" name="Responsavel.Rg" class="input" type="text" />
                </div>
                <div class="input-container ic2">
                    <label class="component-name">CPF</label>
                    <input id="cpf" name="Responsavel.Cpf" class="input" type="text" />
                </div>
                <div class="input-container ic2">
                    <label class="component-name">Data de Nascimento</label>
                    <input id="data-nascimento" name="Responsavel.DataNascimento" class="special-components-input" />
                </div>
                <div class="input-container ic2">
                    <label class="component-name">Celular</label>
                    <input id="phone_number" name="Responsavel.Celular" class="input" type="text" />
                </div>
                <div class="input-container ic2">
                    <label class="component-name">Telefone</label>
                    <input id="tel_number" name="Responsavel.Telefone" class="input" type="text" />
                </div>
                <div class="input-container ic2">
                    <label class="component-name">Sexo</label>
                    <input id="sexoMasculino" name="Responsavel.Sexo" type="radio" value="M" />
                    <label for="sexoMasculino">Masculino</label>
                    <input id="sexoFeminino" name="Responsavel.Sexo" type="radio" value="F" />
                    <label for="sexoFeminino">Feminino</label>
                </div>
                <div class="input-container ic2">
                    <label class="component-name">Sacramentos</label>
                    <input id="batizado" type="checkbox" value="true" name="Responsavel.Batizado" placeholder=" " />
                    <label for="batizado">Batismo</label>
                    <input id="crismado" type="checkbox" value="true" name="Responsavel.Crismado" placeholder=" " />
                    <label for="crismado">Crisma</label>
                    <input id="eucaristia" type="checkbox" value="true" name="Responsavel.PrimeiraEucaristia" placeholder=" " />
                    <label for="eucaristia">Eucaristia</label>
                    <input id="matrimonio" type="checkbox" value="true" name="Responsavel.Matrimonio" placeholder=" " />
                    <label for="matrimonio">Matrimônio</label>
                </div>
                <div class="input-container ic2">
                    <label class="component-name">Estado Civil</label>
                    <input id="estado-civil" name="Responsavel.EstadoCivil.Id" class="special-components-input" />
                </div>
                <div class="input-container ic2">
                    <label class="component-name">Profissão</label>
                    <input id="profissao" name="Responsavel.Profissao" class="input" type="text" MaxLength="50"/>
                </div>
                <div class="input-container ic2">
                    <label class="component-name">Situaçao Emprego</label>
                    <input id="situacao-emprego" name="Responsavel.SituacaoEmprego.Id" class="special-components-input" />
                </div>
            </div>
        </div>
        <input type="submit" class="submit" />

    </div>

}

@section scripts{
<script src="~/js/forms-components.js"> </script>
<script src="~/js/inserir-pessoa.js"></script>

<script>

       $(document).ready(function () {

        @Html.Raw(" const situacoesEmpregoData = " + JsonConvert.SerializeObject(ViewData["situacoesEmprego"]))
        @Html.Raw(" const estadoCivilData = " + JsonConvert.SerializeObject(ViewData["estadoCivil"]))

        createForm(situacoesEmpregoData, estadoCivilData,{});
    });

</script>
}